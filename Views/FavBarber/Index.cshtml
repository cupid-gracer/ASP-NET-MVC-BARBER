@model IEnumerable<asp_net_backend.ViewModels.FavIndexData>

@{
    ViewBag.Title = "User Management";
    ViewBag.activePage = "favbarber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="card registration">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Clients</h4>
            </div>
            <div class="card-body ">
                @if (Session["status"] != null)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="material-icons">close</i>
                                </button>
                                <span>@Session["status"]</span>
                            </div>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-8" style="text-align:right; margin-bottom:20px">
                        Positions Manage
                    </div>
                </div>
                <div class="fresh-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style='text-align:center'>
                        <thead class=" text-primary">
                            <tr>
                                <th style="width:80px"> No </th>
                                <th> Avatar </th>
                                <th> FirstName </th>
                                <th> LastName </th>
                                <th> Email </th>
                                <th> My Barbers </th>
                                <th> Created_at </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1; }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @i  </td>
                                    <td rel="tooltip" data-original-title="@Html.DisplayFor(modelItem => item.users.firstname)" title="@Html.DisplayFor(modelItem => item.users.firstname)">
                                        <img src="@Html.DisplayFor(modelItem => item.users.avatar)" style="max-width:100px; max-height:100px; border-radius:50%">
                                    </td>
                                    <td> @Html.DisplayFor(modelItem => item.users.firstname) </td>
                                    <td> @Html.DisplayFor(modelItem => item.users.lastname) </td>
                                    <td> @Html.DisplayFor(modelItem => item.users.email) </td>
                                    <td>
                                        <a href=" @Url.Action("edit/"+item.users.id, "FavBarber")   " class="btn btn-primary btn-sm">
                                            My Barbers <span class="">@Html.DisplayFor(modelItem => item.barbers) </span>
                                        </a>
                                    </td>
                                    <td> @DateTime.Parse(item.users.created_at).ToShortDateString() </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
