@model IEnumerable<asp_net_backend.Models.Users>

@{
    ViewBag.Title = "Users Management";
    ViewBag.activePage = "user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="card registration">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Clients</h4>
            </div>
            <div class="card-body ">
                @{

                    if (Session["status"] != null)
                    {

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="alert alert-success">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <i class="material-icons">close</i>
                                    </button>
                                    <span>@Session["status"]</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-8" style="text-align:right; margin-bottom:20px">
                        Positions Manage
                    </div>
                </div>
                <div class="fresh-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style='text-align:center'>
                        <thead class=" text-primary">
                            <tr>
                                <th style="width:80px">No</th>
                                <th> Avatar </th>
                                <th> FirstName </th>
                                <th> LastName </th>
                                <th> Email </th>
                                <th> Created_at </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1; }
                            @foreach (var item in Model)
                            {
                                if (item.barber == 0)
                                {
                                    <tr>
                                        <td> @i </td>
                                        <td rel="tooltip" data-original-title="@Html.DisplayFor(modelItem => item.firstname)" title="@Html.DisplayFor(modelItem => item.firstname)">
                                            <img src="@Html.DisplayFor(modelItem => item.avatar)" style="max-width:100px; max-height:100px; border-radius:50%">
                                        </td>
                                        <td> @Html.DisplayFor(modelItem => item.firstname) </td>
                                        <td> @Html.DisplayFor(modelItem => item.lastname) </td>
                                        <td> @Html.DisplayFor(modelItem => item.email) </td>
                                        <td> @DateTime.Parse(item.created_at).ToShortDateString()  </td>
                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card registration">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Barbers</h4>
            </div>
            <div class="card-body ">
                @if (Session["status"] != null)
                {

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="material-icons">close</i>
                                </button>
                                <span>@Session["status"]</span>
                            </div>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-8" style="text-align:right; margin-bottom:20px">
                        Positions Manage
                    </div>
                </div>
                <div class="fresh-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style='text-align:center'>
                        <thead class=" text-primary">
                            <tr>
                                <th style="width:80px"> No </th>
                                <th> Avatar </th>
                                <th> FirstName </th>
                                <th> LastName </th>
                                <th> Email </th>
                                <th> Score </th>
                                <th> Rate </th>
                                <th> Created_at </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ i = 1; string ch = "checked"; }
                            @foreach (var item in Model)
                            {
                                if (item.barber == 1)
                                {
                                    <tr>
                                        <td> @i </td>
                                        <td rel="tooltip" data-original-title="@Html.DisplayFor(modelItem => item.firstname)" title="@Html.DisplayFor(modelItem => item.firstname)">
                                            <img src="@Html.DisplayFor(modelItem => item.avatar)?@DateTime.Now.ToString()" style="max-width:100px; max-height:100px; border-radius:50%">
                                        </td>
                                        <td> @Html.DisplayFor(modelItem => item.firstname) </td>
                                        <td> @Html.DisplayFor(modelItem => item.lastname) </td>
                                        <td> @Html.DisplayFor(modelItem => item.email) </td>
                                        <td> @Html.DisplayFor(modelItem => item.rate) </td>
                                        <td>
                                            <input class="star star-5" id="star-5" value="5" type="radio" name="star" disabled @{ if (item.star == 5) { @ch  } } />
                                            <label class="star star-5" for="star-5"></label>
                                            <input class="star star-4" id="star-4" value="4" type="radio" name="star" disabled @{ if (item.star == 4) { @ch  } } />
                                            <label class="star star-4" for="star-4"></label>
                                            <input class="star star-3" id="star-3" value="3" type="radio" name="star" disabled @{ if (item.star == 3) { @ch  } } />
                                            <label class="star star-3" for="star-3"></label>
                                            <input class="star star-2" id="star-2" value="2" type="radio" name="star" disabled @{ if (item.star == 2) { @ch  } } />
                                            <label class="star star-2" for="star-2"></label>
                                            <input class="star star-1" id="star-1" value="1" type="radio" name="star" disabled @{ if (item.star == 1) { @ch  } } />
                                            <label class="star star-1" for="star-1"></label>
                                        </td>
                                        <td> @DateTime.Parse(item.created_at).ToShortDateString()  </td>
                                    </tr>
                                }
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
